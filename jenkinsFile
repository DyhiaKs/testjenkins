pipeline {
    agent any
 
    stages {
        stage('Checkout') {
            steps {
         
                git credentialsId: 'TokenJenkins', url: 'https://github.com/DyhiaKs/testjenkins.git', branch: 'main'
            }
        }
        stage('Clean solution ') {
            steps {
           
                bat '"C:\\Program Files\\dotnet\\dotnet.exe" clean C:\\Users\\dyhia\\source\\repos\\Exo01\\Exo01 -c:Debug'
           
            }
        }
        stage('Build') {
            steps {
           
                bat '"C:\\Program Files\\dotnet\\dotnet.exe" build C:\\Users\\dyhia\\source\\repos\\Exo01\\Exo01' // Utilisation de 'bat' pour exécuter des commandes Windows
               

            }
        }
         stage('Run') {
            steps {
           
                bat '"C:\\Program Files\\dotnet\\dotnet.exe" test "C:\\Users\\dyhia\\source\\repos\\Exo01\\Exo01\\bin\\Debug\\net8.0\\Exo01.dll"'
// Utilisation de 'bat' pour exécuter des commandes Windows
               

            }


        }
    }

}
